@model CreateContractDto

@{
    ViewData["Title"] = "إضافة عقد جديد";
    Layout = null;
}

<form asp-action="Create" class="ajaxForm" tname="#kt_datatable">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="ContractType" class="control-label"></label>
            <select asp-for="ContractType" class="form-control">
                <option value="@ContractType.buy">شراء</option>
                <option value="@ContractType.rental">إيجار</option>
                <option value="@ContractType.sale">بيع</option>
            </select>
            <span asp-validation-for="ContractType" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="@ViewBag.customer"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="RealEstatedId" class="control-label"></label>
                <select asp-for="RealEstatedId" class="form-control" asp-items="@ViewBag.realeste"></select>
                <span asp-validation-for="RealEstatedId" class="text-danger"></span>
            </div>
        </div>
    </div>




    <div class="form-group">
        <input type="submit" value="إضافة" class="btn btn-primary" />
        <a data-dismiss="modal" aria-label="Close" class="btn btn-danger">الغاء</a>
    </div>
</form>


<script>
    PageLoadActions();
</script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>